#include<iostream>
using namespace std;
void sortArrays(int arr[],int size);
int main()
{
int size,i;
cout<<",enter size of arrays  : ";
cin >>size;
int arr[size];
for(i=0;i<size;i++)
{
	cout<<"enter value :";
	cin>>arr[i];
}
cout<<"Enter value is :\n ";
for(i=0;i<size;i++)
{
	cout<<arr[i]<<"  ";
}
sortArrays(arr,size);
}
 void sortArrays(int arr[],int size)
 {
 	int i=0,j=0;
 	for(i=0;i<size;i++)
	 {
	 	for(j=0;j<size-1-i;j++)
		 {
		 	if(arr[j]>arr[j+1])
			{
				int temp=arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=temp;
			 }	
		 	 }
	 }
	 cout<<"Sorted arrays is : ";
	 for(i=0;i<size;i++)
	 {
	 	cout<<arr[i]<< " ";
	 }
 }


