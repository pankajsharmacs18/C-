#include<iostream>
using namespace std;
float avg(int arr[],int n);
int main()
{
int size,i;
cout<<",enter size of arrays  : ";
cin >>size;
int arr[size];
for(i=0;i<size;i++)
{
	cout<<"enter value :";
	cin>>arr[i];
}
cout<<"Enter value is :\n ";
for(i=0;i<size;i++)
{
	cout<<arr[i]<<"  ";
}
cout<< "\n Average  is  :"<<avg(arr,size);
	}
float avg(int arr[],int size)
{
	
int i=0;
float avg=0,sum =0.0;
for(i=0;i<size;i++)
{
	sum=sum+arr[i];
}
avg=float(sum/size);
return avg;
}


