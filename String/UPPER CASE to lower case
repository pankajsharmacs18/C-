#include<iostream>
using namespace std;
int main()
{
	string str;
	cout<<"enter name of user : ";
	getline(cin,str);
  cout<<"Entered string is : "<< str;
int i=0;
int vow=0,cons=0;
while(str[i])
{
	if(str[i] >= 'A' && str[i]<='Z' ) 
		{
			
			str[i]=str[i]+32;
		}
i++;
}
cout<<"\n After replaced value  : "<<str;
}
